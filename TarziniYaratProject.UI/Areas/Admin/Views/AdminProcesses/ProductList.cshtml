@model IEnumerable<TarziniYaratProject.Entities.Models.Product>

@{
    ViewBag.Title = "ProductList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ürün İşlemleri</h2>
<a href="#" class="btn btn-success btn-icon-split" style="margin-bottom:20px">
    <span class="icon text-white-50">
        <i class="fas fa-check"></i>
    </span>
    <span class="text">Yeni Ürün Ekle</span>
</a>
@*<p>
        @Html.ActionLink("Yeni Ürün Ekle", "Create", null, new { @class = "btn btn-success btn-icon-split" })
    </p>*@
<table class="table">
    <tr>
        <th>
            Başlık
        </th>
        <th>
            Açıklama
        </th>
        <th>
            Fiyat
        </th>
        <th>
            Eklenme Tarihi
        </th>
        <th>
            Cinsiyet
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                <a href="#" class="btn btn-success btn-circle btn-xs ">
                    <i class="fas fa-check"></i>
                </a>
                <a href="#" class="btn btn-info btn-circle btn-xs ">
                    <i class="fas fa-info-circle"></i>
                </a>
                <a href="#" class="btn btn-danger btn-circle btn-xs btnDelete" prod-id="@item.ProductID">
                    <i class="fas fa-trash"></i>
                </a>
                @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }, new { @class = "" }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".btnDelete").click(function () {
            var prodID = $(this).attr("prod-id");

            $.ajax({
                url: "/AdminProcesses/DeleteProduct/" + prodID,
                type: "POST",
                dataType: "json",
                success: function (resp) {
                    if (resp == "ok") {
                        alert("Silme işlemi başarılı.")
                        window.location.reload();
                    }
                    else {
                        alert("Ürün bulunamadı.");
                    }
                }
            });
        });

    </script>
}