@model IEnumerable<TarziniYaratProject.Entities.Models.Product>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Veritabanında ki imagepath:/Images/Products/banner-01.jpg -->
<!--IsActive True-->
<div class="row">
    <div class="col-lg-1">

    </div>
    <div class="col-lg-2">
        <div class="w-size7 p-t-30 p-l-15 p-r-15 respon4">
            <h4 class="s-text12 p-b-30">
                Kategoriler
            </h4>
            @foreach (var item in (List<TarziniYaratProject.Entities.Models.Category>)ViewBag.Categories)
            {
                <ul>
                    <li class="p-b-9">
                        @Html.ActionLink(@item.Name, "Products", new { catid = @item.CategoryID })
                        @*<a href="#" class="s-text7">
                                @item.Name
                            </a>*@
                    </li>
                </ul>
            }
        </div>





    </div>

    <div class="col-lg-9">

    @foreach (var product in Model)
    {
        <div style="width:300px;height:500px; display:inline-block;">
            <div class="item-slick2 p-l-15 p-r-15">
                <!-- Block2 -->
                <div class="block2">
                    <div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelnew">
                        <img src="@product.Images.Where(a=>a.ProductID==product.ProductID).FirstOrDefault().ImagePath" alt="IMG-PRODUCT">

                        <div class="block2-overlay trans-0-4">
                            <a href="#" class="block2-btn-addwishlist hov-pointer trans-0-4">
                                <i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
                                <i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
                            </a>

                                <div class="block2-btn-addcart w-size1 trans-0-4">
                                    <!-- Button -->
                                    <button class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4">
                                        Add to Cart
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="block2-txt p-t-20">
                            <a href="product-detail.html" class="block2-name dis-block s-text3 p-b-5">
                                @product.Title
                            </a>

                            <span class="block2-price m-text6 p-r-5">
                                @product.Price.ToString("c")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
