@model TarziniYaratProject.Entities.Models.Person

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4" style="margin:10px;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <img />
                </div>
                @Html.Label("", "Kullanıcı Adı")
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Kullanıcı Adı Giriniz." } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.Label("", "Şifre")
                <div class="form-group">

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Şifre Giriniz." } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                 
                        <input type="submit" style="margin-left:125px;" value="Giriş Yap" class="btn btn-default" />
                </div>
            </div>
            }

            <div>
                @Html.ActionLink("Kayıt Olmadınız Mı? Hemen Kayıt Olun!", "Register")
            </div>
        </div>
        <div class="col-lg-4"></div>
    </div>
</div>


